{
  "manifest_version": 3,
  "name": "Bye-Bye, Alice AI!",
  "version": "1.5",
  "description": "Automatically removes Yandex's Alice AI blocks from web pages.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["remover.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon_inactive.png"
    }
  },
  "icons": {
    "128": "icon128.png"
  }
}